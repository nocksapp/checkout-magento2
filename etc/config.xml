<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <nocks_gateway>
                <active>1</active>
                <model>NocksPaymentGatewayFacade</model>
                <access_token backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <merchant backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <order_status>new</order_status>
                <title>Nocks checkout</title>
                <currency>EUR</currency>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_void>0</can_void>
                <can_refund>0</can_refund>
                <can_cancel>1</can_cancel>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
            </nocks_gateway>
        </payment>
    </default>
</config>
